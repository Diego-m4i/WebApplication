@model IEnumerable<WebApp.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to TechGlam</h1>
    <p>Discover our exclusive tech accessories</p>
</div>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-3">
            <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="@(product.ImageUrl)" alt="Product Image">
                <div class="card-body">
                    <h5>@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href="/Cart/AddToCart?productId=@product.ProductId" class="btn btn-sm btn-outline-secondary">Add to Cart</a>
                        </div>
                        <small class="text-muted">@product.Price $</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>