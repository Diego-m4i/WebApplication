@model WebApp.Models.Cart

@{
ViewData["Title"] = "Cart";
}

<h2>Cart</h2>

@if (Model.CartItems != null && Model.CartItems.Any())
{
<table class="table">
    <thead>
    <tr>
        <th>Product Name</th>
        <th>Quantity</th>
        <th>Price</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.CartItems)
    {
    <tr>
        <td>@item.Product.Name</td>
        <td>@item.Quantity</td>
        <td>@item.Product.Price.ToString("C")</td>
    </tr>
    }
    </tbody>
</table>
}
else
{
<p>Your cart is empty.</p>
}
